{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["./tsconfig.json", "./client/tsconfig.json", "./server/tsconfig.json", "./packages/*/tsconfig.json"],
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"],
  "ignorePatterns": ["node_modules/", "dist/", "build/", "out/", "*.js", "*.d.ts", "*.map"],
  "rules": {
    "prettier/prettier": "error",
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "no-unused-vars": "warn"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": ["./tsconfig.json", "./client/tsconfig.json", "./server/tsconfig.json", "./packages/*/tsconfig.json"]
      }
    }
  ]
}
